<?xml version="1.0" encoding="utf-8"?>
<ConnectionType id="transition" xmlns="http://umlfri.kst.fri.uniza.sk/xmlschema/metamodel.xsd">
    <Icon path="icons/transition.png" />
    <Domain id="transition" />
    
    <Appearance>
        <Condition condition="#self.critical">
            <ConnectionLine style="solid" color="red" />
            <ConnectionArrow index="-1" style="simple_arrow" color="red" />
        </Condition>
        <Condition condition="#not self.critical">
            <ConnectionLine style="solid" color="#cfg.Styles.Connection.LineColor" />
            <ConnectionArrow index="-1" style="simple_arrow" color="#cfg.Styles.Connection.ArrowColor" />
        </Condition>
    </Appearance>
</ConnectionType>
