<?xml version="1.0" encoding="utf-8"?>
<ElementType id="node" xmlns="http://umlfri.kst.fri.uniza.sk/xmlschema/metamodel.xsd">
    <Icon path="icons/node.png" />
    <Domain id="node"/>
    <Connections>
        <Item value="edge" />
    </Connections>
    <Appearance>
        <Ellipse border="black" fill="#('yellow' if self.current else 'green' if self.final else 'white')">
            <Padding padding="5">
                <Proportional ratio="1:1">
                    <Align align="center center">
                        <HBox>
                            <TextBox text="#self.shortest" color="black" font="Arial 20" />
                        </HBox>
                    </Align>
                </Proportional>
            </Padding>
        </Ellipse>
    </Appearance>
    <Options />
</ElementType>
